<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
<link rel="stylesheet" type="text/css" href="/css/style.css" />
<title>Episodes</title>
</head>
<body>
	<div class="panel col-sm-8 col-sm-offset-2">
		<h1 class="text-center">List episodes</h1>
		<div class="row">
            <div class="col-sm-5 col-sm-offset-3">
                <input type="text" name="filter" id="filter" class="form-control" placeholder="Filter">
            </div>
            <div class="col-sm-1">
                <a class="btn btn-primary" id="filter-button">Go</a>
            </div>
            <div class="col-sm-2">
                <a class="btn btn-danger" id="filter-clear">Clear</a>
            </div>
        </div>
        <table class="table table-striped mt-30 m-center">
			<thead>
				<tr>
					<th>Image</th>
					<th>Name</th>
					<th>Description</th>
				</tr>
			</thead>
			<tbody id="list-episodes">
				<% episodes.forEach(function(ep){ %>
                    <tr>
                        <td><img src="<%=ep.image.medium%>"></td>
                        <td><%=ep.name%></td>
                        <td><%-ep.summary%></td>
                    </tr>
				<% }) %>
			</tbody>
		</table>
		<div class="row">
            <ul class="pagination">
              <% for(var i=1;i<count+1;i++){ %>
              <li class="<%=(current==i) ? 'active' : '' %>"><a href="#" ><%=i%></a></li>
              <% } %>
            </ul>
		</div>
	</div>
	<script src="/js/filter.js"></script>
</body>
</html>